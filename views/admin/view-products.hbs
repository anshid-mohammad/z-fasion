<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bootstrap Table</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
  
  <style>
    .section {
      font-family: initial;
    }
  </style>
</head>
<body>
<section>
  <div class="container">
    <div class="text-end ml-auto">
      <a href="/admin/add-product"><button class="btn btn-success my-4">Add products</button></a>
    </div>
    
    <!-- Responsive Table Wrapper -->
    <div class="table-responsive">
      <table class="table" id="productsTable">
        <thead>
          <tr>
            <th class="section" scope="col">No</th>
            <th class="section" scope="col">Name</th>
            <th class="section" scope="col">Category</th>
            <th class="section" scope="col">Product Details</th>
            <th class="section" scope="col">Size</th>
            <th class="section" scope="col">Discount</th>
            <th class="section" scope="col">Image</th>
            <th class="section" scope="col">Edit</th>
            <th class="section" scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Details}}</td>
            <td>{{this.size}}</td>
            <td>{{this.Discount}}</td>
            <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"></td>
            <td>
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-outline-primary">Edit product</a>
            </td>
            <td>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to remove this product?');">Delete Product</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>

<!-- jQuery and DataTables JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
  $(document).ready(function () {
    $('#productsTable').DataTable({
      paging: true,             // Enable pagination
      searching: true,          // Enable search filter
      ordering: true,           // Enable sorting on columns
      pageLength: 10,           // Set default number of rows per page
      lengthMenu: [5, 10, 25, 50], // Options for page length selection
      language: {
        search: "Filter records:", // Customize search input placeholder
        lengthMenu: "Display _MENU_ records per page",
        info: "Showing _START_ to _END_ of _TOTAL_ records"
      }
    });
  });
</script>
</body>
</html>
